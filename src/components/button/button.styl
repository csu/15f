@import '../../constants'
buttonBorderSize = 4px

.Button
  border-radius 2px
  cursor pointer
  transition background transitionSpeed

  &.solid
    color white!important
    background linear-gradient(colorBlueLight, colorBlue)
    border-bottom buttonBorderSize solid colorBlueDark

    &:hover
      color #333!important
      background linear-gradient(colorBlueLightest, colorBlueLightest)
