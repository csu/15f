@import '../../constants'
timeSize = 50px

.ScheduleSection
  position relative
  background linear-gradient(colorPurpleLight, colorPurple)
  color white

  .section.title
    padding-top websitePadding

  .days
    padding-bottom 80px

    .day
      display inline-block
      width 50%
      padding 0 10%
      margin-top 20px
      vertical-align top

      @media mediaTablet
        padding 0 5%

      // 1 column
      @media mediaPhone
        display block
        width 100%
        padding 0 10%

      .day-title
        margin-bottom 20px
        font-size fontSizeXLarge

        @media mediaPhone
          font-size fontSizeLarge
          font-weight 700
          text-align center

      .events
        margin-left 10px

        @media mediaPhone
          margin-left 0

        .event
          margin-bottom 20px
          overflow hidden

          .time
            width timeSize
            height timeSize
            display inline-block
            text-align center
            border 2px solid colorBlueLight
            border-radius 50%
            line-height 1
            float left

            .number
              font-size 26px
              font-weight 700
              margin-top 4px

            .period
              text-transform uppercase
              font-size 12px

          .event-title
            padding-top 10px
            margin-left 30px
            vertical-align top
            display inline-block
            font-size fontSizeLarge
            float right
            position absolute

            @media mediaPhone
              margin-left 10px

  .sea
    position absolute
    width 105%
    left -10px
    bottom -10px
