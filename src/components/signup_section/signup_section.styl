@import '../../constants'

.SignupSection
  position relative
  color colorPinkLight

  #signup
    text-align center
    display block

    label
      display block

    div
      display inline-block

    input[type="email"]
      display block
      font-family 'Proxima Nova', sans-serif
      padding 7px 7px
      margin 10px 10px 24px 0
      outline none
      vertical-align middle
      min-width 300px
      font-size 16px
      background #fff
      outline 0
      -webkit-appearance none
      -webkit-tap-highlight-color rgba(255,255,255,0)
      line-height 1.5em
      background #fff
      border 1px solid rgba(39,41,43,.15)
      color rgba(0,0,0,.8)
      border-radius .2857rem
      box-shadow 0 0 transparent inset
      -webkit-transition background-color .2s ease,color .2s ease,box-shadow .2s ease,border-color .2s ease
      transition background-color .2s ease,color .2s ease,box-shadow .2s ease,border-color .2s ease

    input[type="email"]:focus
      color: #3d4145;
      background-color: #f2f2f2;

    .button
      font-family: 'Proxima Nova', sans-serif;
      display: inline-block
      padding: 9px 12px
      margin-bottom: 0
      font-size: 16px
      font-weight: 400
      line-height: 1.5em
      text-align: center
      white-space: nowrap
      vertical-align: middle
      cursor: pointer
      background-image: none
      border: 0px
      border-radius: 4px
      color: #fff
      background-color: #337ab7
      border-color: #2e6da4

    .button:hover,
    .button:focus
      background-color #04447a
