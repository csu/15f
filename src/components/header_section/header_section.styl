@import '../../constants'

.HeaderSection
  position fixed
  background white
  z-index 100
  height 80px
  overflow hidden
  padding websitePadding * 0.5 websitePadding * 0.5 10px websitePadding * 0.5

  .logo
    display inline-block
    margin-top 10px
    margin-left 10px
    width 120px

  .nav
    display inline-block
    vertical-align top

    li
      display inline-block
      margin-left 30px

      // Hide nav links
      &:not(.register-button)
        @media mediaTablet
          display none

      .Button
        padding 10px 20px
        font-size fontSizeLarge

        &:hover:not(.solid)
          background #eee

  .social-buttons
    float right
    display inline-block

    li
      display inline-block
      margin-left 30px

      .Button
        padding 10px
        transition opacity transitionSpeed

        &:hover
          opacity 0.6

        .icon
          width 25px
          vertical-align middle
