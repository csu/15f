@import '../../constants'

@keyframes heartbeat
  0%
    transform scale(1)
  14%
    transform scale(1.2)
  28%
    transform scale(1)
  42%
    transform scale(1.3)
  70%
    transform scale(1)

.FooterSection
  .footer
    padding websitePadding
    color colorWhiteDark

  .main.footer
    background colorGray

    .col
      display inline-block
      width 33.3%
      vertical-align top

      &.logo
        text-align center

      .title
        font-size fontSizeNormal
        color colorGrayLight
        font-weight 700
        margin-bottom 5px

    .organizers
      .organizers-list
        height 100px

        li
          display inline-block
          width 50%
          float left

  .sub.footer
    padding websitePadding * 0.5
    background colorGrayDark
    text-align center
    color white

    .love
      margin-bottom websitePadding * 0.5

      .heart
        cursor pointer
        color colorPinkLight
        transition-property font-size
        transition-duration 1s
        transition-timing-function ease
        animation-name heartbeat
        animation-duration 1.3s
        animation-iteration-count infinite

        &:hover
          font-size 40px

    .TOS
      font-size fontSizeSmall
      color colorGrayLight

