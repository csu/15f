.SponsorSection
  background linear-gradient(colorBlueDark, colorPurple)
  color white
  padding websitePadding

  .subtitle
    margin-top 30px

  .tiers
    margin-top 20px
    text-align center

    li
      transition background transitionSpeed
      cursor pointer
      background rgba(white, 0.2)
      display inline-block
      width 100%
      height 100%
      border-radius 2px

      &:hover
        background rgba(white, 0.1)

    a
      max-width 100%
      height 200px
      padding 5px
      display inline-block

    .standard
      a
        width 400px

    .lite
      a
        width 200px

        @media all and (max-width: 460px)
          width 100%
