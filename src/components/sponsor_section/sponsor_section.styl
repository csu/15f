@import '../../constants'

.SponsorSection
  position relative
  background linear-gradient(colorBlueDark, colorPurple)
  color white
  padding websitePadding
  overflow hidden

  .subtitle
    margin-top 30px
    text-align center

    .sponsor-cta
      font-weight 700
      transition border-bottom transitionSpeed
      border-bottom 1px dotted rgba(white, 0.3)

      &:hover
        border-bottom 1px dotted rgba(white, 0.7)

  .anchor
    position absolute
    bottom -7px
    right 15%
    transform rotate(30deg)
    width 70px
    opacity 0.4

  .tiers
    margin-top 20px
    text-align center

    li
      transition background transitionSpeed
      cursor pointer
      background rgba(white, 0.2)
      display inline-block
      width 100%
      height 100%
      border-radius 2px

      &:hover
        background rgba(white, 0.1)

    a
      max-width 100%
      height 200px
      padding 5px
      display inline-block

    .standard
      a
        width 400px

    .lite
      a
        width 200px

        @media all and (max-width: 460px)
          width 100%
