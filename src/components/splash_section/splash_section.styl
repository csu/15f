@import '../../constants'
centerSize = 300px
cloudSpeed = 100s
planeSpeed = 60s

@keyframes cloud1
  0%
    left 10%
  15%
    left 4%
  30%
    left 20%
  70%
    left 80%
  100%
    left 10%

@keyframes cloud2
  0%
    left 80%
  50%
    left 20%
  100%
    left 80%

@keyframes cloud3
  0%
    left 15%
  50%
    left 110%
  50.0001%
    left -20%
  100%
    left 15%

@keyframes plane
  10%
    left -20%
    top 70%
  20%
    left 105%
    top 40%
  20.0001%
    left -20%

@keyframes titleLogoShake
  0%
    transform scale(1)
  80%
    transform scale(1)
  95%
    transform scale(1.1)

.SplashSection
  height 100 vh
  background linear-gradient(colorPink, colorPinkLight)
  color white

  .center
    text-align center
    height centerSize
    width centerSize
    position absolute
    left 50%
    top 45%
    margin-left -(centerSize / 2)
    margin-top -(centerSize / 2)

    .logo
      width 100%
      animation titleLogoShake 20s infinite

    .subtitle
      margin-top 10px

  .skyline
    width 100%
    position absolute
    bottom -1px

  .clouds
    .cloud
      position absolute

      &.form1
        width 150px
        top 30%
        animation cloud1 cloudSpeed infinite

      &.form2
        width 100px
        top 55%
        animation cloud2 cloudSpeed * 1.1 infinite

      &.form3
        width 100px
        top 75%
        animation cloud3 cloudSpeed * 0.9 infinite

  .planes
    .plane
      position absolute
      width 100px
      transform rotate(-10deg)
      animation plane planeSpeed linear infinite
