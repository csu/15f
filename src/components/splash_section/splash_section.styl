@import '../../constants'
centerSize = 300px
cloudSpeed = 100s

@keyframes cloud1
  0%
    left 10%
  25%
    left 4%
  50%
    left 30%
  50%
    left 80%
  100%
    left 10%

@keyframes cloud2
  0%
    left 80%
  50%
    left 20%
  100%
    left 80%

@keyframes cloud3
  0%
    left 15%
  50%
    left 110%
  50.01%
    left -20%
  100%
    left 15%

.SplashSection
  height 100 vh
  background linear-gradient(colorPink, colorPinkLight)
  color white

  .center
    text-align center
    height centerSize
    width centerSize
    position absolute
    left 50%
    top 50%
    margin-left -(centerSize / 2)
    margin-top -(centerSize / 2)

    .logo
      width 100%

    .subtitle
      margin-top 10px

  .skyline
    width 100%
    position absolute
    bottom 0

  .clouds
    .cloud
      position absolute

      &.form1
        width 150px
        top 30%
        animation cloud1 cloudSpeed infinite

      &.form2
        width 100px
        top 50%
        animation cloud2 cloudSpeed * 1.1 infinite

      &.form3
        width 100px
        top 70%
        animation cloud3 cloudSpeed * 0.9 infinite
