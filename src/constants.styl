// # Where all CSS constants go

// ## Colors

colorPink = rgb(235, 30, 122)
colorPinkLight = rgb(239, 83, 82)
colorBlueDark = rgb(0, 129, 189)
colorBlue = rgb(0, 178, 226)
colorBlueLight = rgb(44, 175, 230)
colorBlueLightest= rgb(44, 195, 240)
colorPurpleDark = rgb(39, 24, 108)
colorPurple = rgb(89, 64, 148)
