// ## Fonts
@font-face
  font-family 'Proxima Nova'
  font-style normal
  font-weight 400
  src local('Proxima Nova Regular'), local('ProximaNova-Regular'), url("../../fonts/font.ttf") format('truetype')

fontSizeSmall = 12px
fontSizeNormal = 16px
fontSizeLarge = 20px
fontSizeXLarge = 30px

// ## Sizing and Spacing
websitePadding = 30px

// ## Transitions
transitionSpeedSlow = 400ms
transitionSpeed = 200ms
transitionSpeedFast = 100ms

// ## Media Queries
mediaPhone = "all and (max-width: 480px)"
mediaTablet = "all and (max-width: 950px)"
